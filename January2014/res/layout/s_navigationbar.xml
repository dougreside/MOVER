<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="35dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/s_navigation_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_tab"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/s_navigation_img_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_plays" />

            <TextView
                android:id="@+id/s_navigation_txt_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plays" android:textSize="12sp" 
                android:textColor="#ff9904" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/s_navigation_annotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/btn_tab"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/s_navigation_img_annotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/img_annotate" />

            <TextView
                android:id="@+id/s_navigation_txt_annotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annotate" android:textSize="12sp" 
                android:textColor="#ff9904" />
        </LinearLayout>

        

        <LinearLayout
            android:id="@+id/s_navigation_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_tab"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/s_navigation_img_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/img_about" />

            <TextView
                android:id="@+id/s_navigation_txt_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About" android:textSize="12sp" 
                android:textColor="#ff9904" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>